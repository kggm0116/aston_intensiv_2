<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/task_1_1_homework_button"
        style="@style/launcher_button_style"
        android:text="@string/task_1_1_homework_text"
        app:layout_constraintBottom_toTopOf="@id/task_1_1_challenge_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/task_1_1_challenge_button"
        style="@style/launcher_button_style"
        android:text="@string/task_1_1_challenge_text"
        app:layout_constraintBottom_toTopOf="@id/task_1_2_homework_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_1_1_homework_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/task_1_2_homework_button"
        style="@style/launcher_button_style"
        android:text="@string/task_1_2_homework_text"
        app:layout_constraintBottom_toTopOf="@id/task_1_2_challenge_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_1_1_challenge_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/task_1_2_challenge_button"
        style="@style/launcher_button_style"
        android:text="@string/task_1_2_challenge_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_1_2_homework_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
